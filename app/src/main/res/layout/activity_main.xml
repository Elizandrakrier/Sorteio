<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFEFE"
    android:backgroundTint="#FAF8F8"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_escolha_um_numero"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="364dp"
        android:text="Escolha um número 0 e 10"
        android:textAlignment="center"
        android:textColor="#F881A9"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/clicar_jogar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:background="#989292"
        android:backgroundTint="#ACA9A9"
        android:onClick="sortearNumero"
        android:text="Jogar"
        android:textColor="#FBFBFB"
        app:iconTint="#E66E97"
        app:layout_constraintBottom_toTopOf="@+id/text_resultado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_resultado"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="536dp"
        android:text="Nenhum número selecionado"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imagem_logo"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sorteio" />

</androidx.constraintlayout.widget.ConstraintLayout>